<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardCornerRadius="@dimen/dp_8"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_6"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/lobby"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="中影I Do巨幕全景声厅"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toTopOf="@id/lobby"
        app:layout_constraintLeft_toRightOf="@id/lobby"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="国语3D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/start"
        android:text="14:40"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/lobby"
        app:layout_constraintTop_toBottomOf="@id/lobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/view"
        app:layout_constraintBottom_toBottomOf="@id/start"
        app:layout_constraintLeft_toRightOf="@id/start"
        android:layout_marginLeft="@dimen/dp_5"
        android:background="#000"
        app:layout_constraintTop_toTopOf="@id/start"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_2"/>
    <TextView
        android:id="@+id/end"
        android:textSize="@dimen/sp_14"
        android:text="16:26"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="@id/start"
        app:layout_constraintBottom_toBottomOf="@id/start"
        app:layout_constraintLeft_toRightOf="@id/view"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="end"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/end"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@id/end"
        app:layout_constraintTop_toTopOf="@id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/next"
        android:src="@mipmap/next"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20" />
    <TextView
        android:id="@+id/price"
        android:text="32.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/next"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/sp_30"
        android:textColor="#b11450"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="￥:"
        android:textSize="@dimen/sp_18"
        android:layout_marginRight="@dimen/dp_6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>