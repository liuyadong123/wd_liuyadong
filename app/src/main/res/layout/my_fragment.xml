<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_220">
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="@dimen/dp_220"
             android:background="@drawable/beijing"
             />
          <ImageView
              android:id="@+id/iv_shengyin"
              android:layout_width="@dimen/dp_24"
              android:layout_height="@dimen/dp_24"
              android:layout_marginTop="@dimen/dp_30"
              android:layout_marginLeft="@dimen/dp_24"
              android:layout_alignParentLeft="true"
              android:background="@mipmap/my_icon_remind_default_hdpi"
              />

           <ImageView
               android:id="@+id/iv_touxiang"
               android:layout_width="@dimen/dp_72"
               android:layout_height="@dimen/dp_72"
               android:background="@mipmap/touxiang"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="@dimen/dp_60"
               />
          <TextView
              android:id="@+id/text_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/sp_14"
              android:text="冬天来了"
              android:textColor="#ffffff"
              android:layout_below="@+id/iv_touxiang"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="@dimen/dp_10"
              />
         <TextView
             android:id="@+id/text_qian"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/sp_14"
             android:text="签到"
              android:gravity="center"
             android:textColor="#ffffff"
             android:layout_below="@+id/text_name"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="@dimen/dp_12"
             android:background="@drawable/qian_shape"
             />
     </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        android:background="#ffffff"
        app:cardCornerRadius="@dimen/dp_5">
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/iv_xingxi"
             android:layout_width="@dimen/dp_24"
             android:layout_height="@dimen/dp_24"
             android:layout_marginTop="@dimen/dp_20"
             android:layout_marginLeft="@dimen/dp_30"
             android:background="@mipmap/my_icon_messiage_default_hdpi"
             />
         <TextView
             android:id="@+id/text_xingxi"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="我的信息"
             android:layout_below="@+id/iv_xingxi"
             android:layout_marginTop="@dimen/dp_10"
             android:layout_marginLeft="@dimen/dp_20"
             android:textColor="#333333"
             android:textSize="@dimen/sp_12"
             />
      </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        android:background="#ffffff"
        app:cardCornerRadius="@dimen/dp_5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/guan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_guanzhu"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="@mipmap/my_icon_attention_default_hdpi"
                />
            <TextView
                android:id="@+id/text_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:layout_below="@+id/iv_guanzhu"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/jilu"
            android:layout_toRightOf="@+id/guan"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv_jilu"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="@mipmap/my_icon_rccord_default_hdpi"
                />
            <TextView
                android:id="@+id/text_jilu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购票记录"
                android:layout_below="@+id/iv_jilu"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12"
                />
        </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        android:background="#ffffff"
        app:cardCornerRadius="@dimen/dp_5">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/yijian"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_yijian"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:background="@mipmap/my_icon_feedback_default_hdpi"
                    />
                <TextView
                    android:id="@+id/text_yijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意见反馈"
                    android:layout_below="@+id/iv_yijian"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/zuixin"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/iv_zuixin"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:background="@mipmap/my_icon_version_default_hdpi"
                    />
                <TextView
                    android:id="@+id/text_zuixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新版本"
                    android:layout_below="@+id/iv_zuixin"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tuichu"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/iv_tuichu"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:background="@mipmap/my_icon_logout_default_hdpi"
                    />
                <TextView
                    android:id="@+id/text_tuichu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:layout_below="@+id/iv_tuichu"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="八维移动通信学院毕业作品"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        />
    
</LinearLayout>