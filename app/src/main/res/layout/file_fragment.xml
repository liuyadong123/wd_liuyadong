<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     >
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
      <recycler.coverflow.RecyclerCoverFlow
        android:background="@mipmap/hdpi2"
        android:id="@+id/rcf_cinema_flow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
      />
        <ImageView
            android:id="@+id/ding"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@mipmap/com_icon_loc_white_default_hdpi"
            />
           <TextView
               android:layout_marginTop="@dimen/dp_30"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="北京"
               android:textSize="@dimen/sp_25"
               android:textColor="#ffffff"
               android:layout_toRightOf="@+id/ding"
               android:layout_marginLeft="@dimen/sp_10"
               />
         <RelativeLayout
             android:layout_alignParentRight="true"
             android:layout_marginTop="@dimen/dp_32"
             android:id="@+id/search_linear"
             android:layout_width="35dp"
             android:layout_height="24dp"
             android:background="@drawable/cinema_search_shape">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">
                 <ImageView
                     android:id="@+id/search_image"
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:paddingLeft="6dp"
                     android:src="@mipmap/com_icon_search_default_hdpi" />
                 <EditText
                     android:id="@+id/search_edname"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentTop="true"
                     android:layout_marginTop="0dp"
                     android:background="@null"
                     android:ems="8"
                     android:padding="5dp"
                     android:textColor="#f2f2f2"
                     android:textSize="12sp"/>
                 <TextView
                     android:id="@+id/search_textName"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="right"
                     android:paddingTop="3dp"
                     android:text="搜索"
                     android:textColor="#ffffff"
                     android:textSize="12sp"
                     android:visibility="gone"/>
             </LinearLayout>
         </RelativeLayout>
     </RelativeLayout>
     <ImageView
         android:layout_marginTop="@dimen/dp_20"
         android:layout_gravity="center"
         android:background="@drawable/image_shape"
         android:layout_width="@dimen/dp_312"
         android:layout_height="@dimen/dp_3" />
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
      <TextView
          android:id="@+id/remen"
          android:layout_marginTop="@dimen/dp_20"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/sp_16"
          android:textColor="#333333"
          android:text="热门电影"
          android:layout_centerVertical="true"
          />

         <ImageView
             android:layout_width="@dimen/dp_24"
             android:layout_height="@dimen/dp_24"
             android:background="@mipmap/next"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             />
     </RelativeLayout>
     <View
         android:id="@+id/view"
         android:layout_marginTop="@dimen/dp_2"
         android:background="#440a33"
         android:layout_width="@dimen/dp_30"
         android:layout_height="@dimen/dp_3"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/zhengzai"
         android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="#333333"
        android:text="正在热映"
        android:layout_centerVertical="true"
        />


        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
     <View
         android:id="@+id/views"
         android:layout_marginTop="@dimen/dp_4"
         android:background="#440a33"
         android:layout_width="@dimen/dp_30"
         android:layout_height="@dimen/dp_3"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/jijiang"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="#333333"
        android:text="即将上映"
        android:layout_centerVertical="true"
        />
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
     <View
         android:id="@+id/viewes"
         android:layout_marginTop="@dimen/dp_4"
         android:background="#440a33"
         android:layout_width="@dimen/dp_30"
         android:layout_height="@dimen/dp_3"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

 </LinearLayout>

</ScrollView>