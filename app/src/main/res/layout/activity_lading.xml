<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    tools:context=".activity.LadingActivity">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_130"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
       <ImageView
           android:id="@+id/phone"
           android:layout_width="@dimen/dp_30"
           android:layout_height="@dimen/dp_30"
           android:background="@mipmap/register_icon_phone_default_hdpi"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           />
         <EditText
             android:id="@+id/ed_phone"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="手机号"
             android:textColorHint="#ffffff"
             android:textColor="#eeeeee"
             android:textSize="@dimen/sp_18"
             android:background="@null"
             android:layout_toRightOf="@+id/phone"
             android:layout_marginLeft="@dimen/dp_20"
             android:layout_centerVertical="true"
             />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:background="#ffffff"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/phones"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@mipmap/register_icon_lock_default_hdpi"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/ed_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:textColorHint="#ffffff"
            android:background="@null"
            android:password="true"
            android:textColor="#eeeeee"
            android:textSize="@dimen/sp_18"
            android:layout_toRightOf="@+id/phones"
            android:layout_toLeftOf="@+id/mw"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            />
        <CheckBox
            android:id="@+id/mw"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@mipmap/log_icon_eye_default_hdpi"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:button="@null"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:background="#ffffff"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/jz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textSize="@dimen/sp_13"
            android:textColor="#ffffff"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <CheckBox
            android:id="@+id/zd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登陆"
            android:textSize="@dimen/sp_13"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/jz"
            android:layout_toLeftOf="@+id/zhuce"
            android:layout_centerVertical="true"
            />
       <TextView
           android:id="@+id/zhuce"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="快速注册"
           android:textColor="#ffffff"
           android:textSize="@dimen/sp_13"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           />
    </RelativeLayout>
    <Button
        android:id="@+id/deng"
        android:layout_marginTop="@dimen/dp_130"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/denglu"
        android:text="登陆"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/xian"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_2"
            android:background="#ffffff"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="-13dp"
            android:layout_toLeftOf="@+id/xian1"
            android:layout_toRightOf="@+id/xian"
            android:text="第三方快速登陆"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_10" />
        <TextView
            android:id="@+id/xian1"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_2"
            android:background="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/wexin"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_gravity="center"
        android:background="@mipmap/log_icon_weixin_default_hdpi"
        />
     
</LinearLayout>