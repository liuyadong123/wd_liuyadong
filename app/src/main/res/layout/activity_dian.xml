<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DianActivity">
    <TextView
        android:id="@+id/cinima_name"
        app:layout_constraintTop_toTopOf="@+id/send"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:textSize="@dimen/sp_14"
        android:text="CGV影院"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/address"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_6"
        android:text="海淀区清河中街68号华润五彩城购物中心东区7层"
        android:maxLines="2"
        app:layout_constraintRight_toRightOf="@+id/send"
        app:layout_constraintTop_toBottomOf="@id/cinima_name"
        app:layout_constraintLeft_toLeftOf="@id/cinima_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/send"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_24"
        android:src="@mipmap/navigation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30" />
    <ImageView
        android:id="@+id/image"
        android:background="@mipmap/hdpi3"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@+id/address"
        android:layout_width="@dimen/dp_312"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="@dimen/dp_150" />
    <ImageView
        android:id="@+id/icon"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintLeft_toLeftOf="@id/image"
        app:layout_constraintBottom_toBottomOf="@id/image"
        android:layout_width="@dimen/dp_103"
        android:layout_height="@dimen/dp_130" />
    <TextView
        android:textColor="#fff"
        android:text="铁血战士"
        android:id="@+id/name"
        android:textSize="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/style"
        android:layout_marginTop="@dimen/dp_8"
        android:text="导演:ll"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/direct"
        android:layout_marginTop="@dimen/dp_5"
        android:text="类型:动作/科幻/冒险"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/time"
        android:layout_marginTop="@dimen/dp_8"
        android:text="市场:106分钟"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/direct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/brith"
        android:layout_marginTop="@dimen/dp_5"
        android:text="产地:中国"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent "
        android:layout_height="0dp"></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>