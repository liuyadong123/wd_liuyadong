<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/hdpi4"
        android:layout_width="@dimen/dp_312"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="@dimen/dp_123">

      <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dp_130"
          android:layout_marginTop="@dimen/sp_15"
          android:textSize="14sp"
          android:text="铁血战士"
          android:textColor="#ffffff"
          />
         <CheckBox
             android:id="@+id/hong"
             android:layout_width="@dimen/dp_24"
             android:layout_height="@dimen/dp_24"
             android:layout_alignParentRight="true"
             android:layout_marginRight="@dimen/dp_10"
             android:layout_marginTop="@dimen/sp_13"
             android:button="@null"
             android:background="@drawable/hong"
             />
         <TextView
             android:id="@+id/jian_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:layout_below="@+id/name"
             android:text="简介:"
             android:layout_marginLeft="@dimen/dp_130"
             android:textColor="#ffffff"
             android:layout_marginTop="@dimen/dp_10"
             android:maxLines="3"
             />
    </RelativeLayout>

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/image"
      android:layout_marginTop="@dimen/dp_20"
      android:layout_width="@dimen/dp_103"
      android:layout_height="@dimen/dp_129"
      android:layout_marginBottom="@dimen/dp_10"
      android:layout_marginLeft="@dimen/dp_20"
      android:background="@drawable/my"
      app:roundedCornerRadius="@dimen/dp_8"
      />
</RelativeLayout>