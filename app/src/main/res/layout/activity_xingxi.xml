<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.activity.XingxiActivity">

     <TextView
         android:id="@+id/text_yong"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="用户信息"
         android:textSize="@dimen/sp_14"
         android:textColor="#333333"
         android:layout_marginTop="@dimen/dp_30"
         android:layout_marginLeft="@dimen/dp_24"
         />
  <LinearLayout
      android:layout_below="@+id/text_yong"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_178"
        android:layout_marginTop="@dimen/dp_30"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
       >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="用户头像"
              android:textSize="@dimen/sp_14"
              android:textColor="#333333"
              android:layout_alignParentLeft="true"
              android:layout_marginTop="@dimen/dp_20"
              android:layout_marginLeft="@dimen/dp_20"
              />
             <ImageView
                 android:id="@+id/touxing"
                 android:layout_width="@dimen/dp_30"
                 android:layout_height="@dimen/dp_30"
                 android:layout_marginTop="@dimen/dp_20"
                 android:layout_marginBottom="@dimen/dp_10"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="@dimen/dp_20"
                 android:background="@mipmap/touxiang"
                 />
        </RelativeLayout>
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#f2f2f2"
             android:layout_marginRight="@dimen/dp_20"
             android:layout_marginLeft="@dimen/dp_20"
             />
         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="用户名称"
                  android:textSize="@dimen/sp_14"
                  android:textColor="#333333"
                  android:layout_alignParentLeft="true"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_marginLeft="@dimen/dp_20"
                  />
              <TextView
                  android:id="@+id/name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="你的益达"
                  android:textColor="#999999"
                  android:textSize="@dimen/sp_14"
                  android:layout_marginTop="@dimen/dp_10"
                  android:layout_marginBottom="@dimen/dp_10"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/dp_20"
                  />
         </RelativeLayout>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="#f2f2f2"
                  android:layout_marginRight="@dimen/dp_20"
                  android:layout_marginLeft="@dimen/dp_20"
                  />

              <RelativeLayout
                  android:layout_marginBottom="@dimen/dp_2"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/dp_34">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentLeft="true"
                       android:layout_marginLeft="@dimen/dp_20"
                       android:layout_marginTop="@dimen/dp_10"
                       android:text="用户性别"
                       android:textColor="#333333"
                       android:textSize="@dimen/sp_14" />

                   <TextView
                       android:id="@+id/sex"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_marginTop="@dimen/dp_10"
                       android:layout_marginRight="@dimen/dp_20"
                       android:text="男"
                       android:textColor="#999999"
                       android:textSize="@dimen/sp_14" />
              </RelativeLayout>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="#f2f2f2"
                  android:layout_marginRight="@dimen/dp_20"
                  android:layout_marginLeft="@dimen/dp_20"
                  />
              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="出生日期"
                       android:textSize="@dimen/sp_14"
                       android:textColor="#333333"
                       android:layout_alignParentLeft="true"
                       android:layout_marginTop="@dimen/dp_10"
                       android:layout_marginLeft="@dimen/dp_20"
                       />
                   <TextView
                       android:id="@+id/birthday"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="1999-05-27"
                       android:textColor="#999999"
                       android:textSize="@dimen/sp_14"
                       android:layout_marginTop="@dimen/dp_10"
                       android:layout_marginBottom="@dimen/dp_10"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="@dimen/dp_20"
                       />
              </RelativeLayout>


         </LinearLayout>

    </android.support.v7.widget.CardView>

     <android.support.v7.widget.CardView
         android:layout_width="@dimen/dp_312"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/dp_20"
         app:cardCornerRadius="@dimen/dp_10"
         android:layout_marginLeft="@dimen/dp_24"
         android:layout_marginRight="@dimen/dp_24"
         >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#333333"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_20"
                        />
                    <TextView
                        android:id="@+id/photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18811754226"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_20"
                        />
               </RelativeLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="#f2f2f2"
                   android:layout_marginRight="@dimen/dp_20"
                   android:layout_marginLeft="@dimen/dp_20"
                   />


               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#333333"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_20"
                        />
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="947212712@qq.com"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_20"
                        />
               </RelativeLayout>


          </LinearLayout>

     </android.support.v7.widget.CardView>
     <android.support.v7.widget.CardView
         android:layout_width="@dimen/dp_312"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/dp_20"
         app:cardCornerRadius="@dimen/dp_10"
         android:layout_marginLeft="@dimen/dp_24"
         android:layout_marginRight="@dimen/dp_24"
         >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重置密码"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#333333"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_20"
                        />
                    <ImageView
                        android:id="@+id/dian"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:background="@mipmap/next"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_20"
                        />
               </RelativeLayout>

          </LinearLayout>
     </android.support.v7.widget.CardView>
  </LinearLayout>
    <ImageView
        android:id="@+id/back"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@mipmap/return_back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60" />
</RelativeLayout>