<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ButActivity">
    <ImageView
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/load"
        android:background="@mipmap/detail_icon_location_default_hdpi"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24" />
    <TextView
        android:text="北京"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/load"
        android:layout_marginLeft="@dimen/dp_6"
        app:layout_constraintLeft_toRightOf="@id/load"
        app:layout_constraintTop_toTopOf="@id/load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/load"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <RadioButton
                android:id="@+id/btn1"
                android:checked="true"
                android:background="@drawable/shape_select_radio"
                android:gravity="center"
                android:text="热门电影"
                android:textSize="@dimen/sp_12"
                android:layout_width="@dimen/dp_83"
                android:textColor="@drawable/che_lie_text"
                android:layout_height="@dimen/dp_25"
                android:button="@null" />
            <RadioButton
                android:button="@null"
                android:id="@+id/btn2"
                android:text="正在热播"
                android:textColor="@drawable/che_lie_text"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:background="@drawable/shape_select_radio"
                android:layout_marginHorizontal="@dimen/dp_25"
                android:layout_width="@dimen/dp_83"
                android:layout_height="@dimen/dp_25"/>
            <RadioButton
                android:id="@+id/btn3"
                android:gravity="center"
                android:text="即将上映"
                android:textColor="@drawable/che_lie_text"
                android:textSize="@dimen/sp_12"
                android:background="@drawable/shape_select_radio"
                android:layout_width="@dimen/dp_83"
                android:layout_height="@dimen/dp_25"
                android:button="@null" />
        </RadioGroup>
    </android.support.constraint.ConstraintLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        app:layout_constraintTop_toBottomOf="@id/layout"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_height="0dp"></android.support.v4.view.ViewPager>
    <ImageView
        android:id="@+id/back"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/return_back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60" />
</android.support.constraint.ConstraintLayout>