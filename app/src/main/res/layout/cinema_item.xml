<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    fresco:cardCornerRadius="@dimen/dp_8"
    android:layout_margin="@dimen/dp_8"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            fresco:placeholderImage="@drawable/loading"
            fresco:roundedCornerRadius="@dimen/dp_4"
            fresco:layout_constraintLeft_toLeftOf="parent"
            fresco:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            fresco:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/icon"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70" />
        <TextView
            android:id="@+id/name"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            fresco:layout_constraintLeft_toRightOf="@id/icon"
            fresco:layout_constraintRight_toRightOf="parent"
            fresco:layout_constraintTop_toTopOf="@id/icon"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/m"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            fresco:layout_constraintLeft_toRightOf="@id/icon"
            fresco:layout_constraintRight_toRightOf="parent"
            fresco:layout_constraintBottom_toBottomOf="@id/icon"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/title"
            fresco:layout_constraintTop_toBottomOf="@id/name"
            fresco:layout_constraintLeft_toRightOf="@id/icon"
            fresco:layout_constraintRight_toRightOf="parent"
            fresco:layout_constraintBottom_toTopOf="@id/m"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/love"
            android:button="@null"
            android:background="@drawable/shape_select_love"
            fresco:layout_constraintBottom_toBottomOf="parent"
            fresco:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_20" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>