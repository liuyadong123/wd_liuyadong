<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.bw.movie.activity.GouZuoActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/ee"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_140"
            android:src="@mipmap/rectangle"/>
        <ImageView
            android:id="@+id/seat_bg"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            android:layout_height="@dimen/dp_180"
            android:src="@mipmap/hdpi2"/>

        <View
            android:id="@+id/view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_40"
            android:background="#6666"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_26"/>
        <TextView
            android:id="@+id/time"
            android:textSize="@dimen/sp_13"
            android:textColor="#fff"
            android:text="10-30"
            android:layout_marginLeft="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="@id/view"
            app:layout_constraintTop_toTopOf="@id/view"
            app:layout_constraintBottom_toBottomOf="@id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/start"
            android:textSize="@dimen/sp_13"
            android:textColor="#fff"
            android:text="14:40"
            app:layout_constraintLeft_toRightOf="@id/time"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@id/view"
            app:layout_constraintBottom_toBottomOf="@id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/view2"
            android:text="—"
            android:textColor="#fff"
            app:layout_constraintTop_toTopOf="@id/view"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintLeft_toRightOf="@id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/end"
            android:textSize="@dimen/sp_13"
            android:textColor="#fff"
            android:text="16:24"
            app:layout_constraintLeft_toRightOf="@id/view2"
            app:layout_constraintTop_toTopOf="@id/view"
            app:layout_constraintBottom_toBottomOf="@id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/title"
            android:textSize="@dimen/sp_13"
            android:textColor="#fff"
            app:layout_constraintTop_toTopOf="@id/view"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintLeft_toRightOf="@id/end"
            app:layout_constraintRight_toRightOf="@id/view"
            android:text="中影I DO巨幕全景声厅"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ok_icon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/ok_seat"
            android:layout_marginTop="@dimen/dp_25"
            app:layout_constraintLeft_toLeftOf="@id/view"
            app:layout_constraintTop_toBottomOf="@id/view"/>
        <TextView
            android:id="@+id/et_ok"
            app:layout_constraintTop_toTopOf="@id/ok_icon"
            android:textSize="@dimen/sp_14"
            android:text="可选"
            android:textColor="#fff"
            android:layout_marginBottom="@dimen/dp_66"

            android:layout_marginLeft="@dimen/dp_8"
            app:layout_constraintLeft_toRightOf="@id/ok_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/icon_ing"
            android:src="@mipmap/seat_ing"
            app:layout_constraintTop_toTopOf="@id/ok_icon"
            app:layout_constraintLeft_toRightOf="@id/et_ok"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:id="@+id/et_ing"
            android:textSize="@dimen/sp_14"
            android:text="选中"
            app:layout_constraintTop_toTopOf="@id/et_good"
            app:layout_constraintLeft_toRightOf="@id/icon_ing"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/icon_buy"
            android:src="@mipmap/seat_buy"
            app:layout_constraintLeft_toRightOf="@id/et_ing"
            android:layout_marginLeft="@dimen/dp_15"
            app:layout_constraintTop_toTopOf="@id/icon_ing"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:id="@+id/sss"
            android:textSize="@dimen/sp_14"
            android:text="已售"
            android:textColor="#fff"
            app:layout_constraintTop_toTopOf="@id/icon_ing"
            app:layout_constraintLeft_toRightOf="@id/icon_buy"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/seat_good"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_15"
            app:layout_constraintLeft_toRightOf="@id/sss"
            app:layout_constraintRight_toLeftOf="@id/et_good"
            app:layout_constraintTop_toTopOf="@id/ok_icon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:id="@+id/et_good"
            app:layout_constraintTop_toTopOf="@id/ok_icon"
            app:layout_constraintRight_toRightOf="@id/view"
            android:textSize="@dimen/sp_14"
            android:text="最佳观影区"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <com.bw.movie.view.SeatTable
            android:id="@+id/seatTableView"
            android:background="#ffffff"
            app:layout_constraintTop_toBottomOf="@id/seat_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>


    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_110"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-40dp"
        app:cardElevation="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_20"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_93"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_34"
                android:layout_marginTop="@dimen/dp_10"
                android:text="合计:  ￥"
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_cinema_seat_text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:text="0"
                android:textColor="#b11450"
                android:textSize="@dimen/sp_32" />

            <ImageView
                android:id="@+id/item_cinema_detail_img_v"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@mipmap/group2" />

            <ImageView
                android:id="@+id/item_cinema_detail_img_x"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/group3" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>